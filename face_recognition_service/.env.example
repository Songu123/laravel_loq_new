# Face Recognition Service Configuration

# Server
HOST=0.0.0.0
PORT=8001
DEBUG=False

# Redis Cache
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel_loq_quizz
DB_USERNAME=root
DB_PASSWORD=

# Face Recognition Settings
CONFIDENCE_THRESHOLD=0.6
MIN_FACE_SIZE=80
MAX_FACE_SIZE=800
FACE_EMBEDDING_SIZE=512

# Anti-Spoofing
ENABLE_ANTI_SPOOFING=True
LIVENESS_THRESHOLD=0.5

# Models
MODEL_PATH=./models
FACENET_MODEL=vggface2.pt
MEDIAPIPE_MAX_FACES=1

# Storage
STORAGE_PATH=./storage/face_images
MAX_ENROLLMENT_IMAGES=10
MIN_ENROLLMENT_IMAGES=3

# Security
ENABLE_RATE_LIMITING=True
MAX_ATTEMPTS_PER_MINUTE=5
ENABLE_LOGGING=True
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
